---

---

<header class="w-full py-6 px-4">
  <div class="max-w-7xl mx-auto flex items-center justify-between">
    <!-- Logo -->
    <div class="flex-1">
      <a
        href="/"
        class="[font-family:'Gloria_Hallelujah',cursive] text-neutral-950 hover:text-black dark:text-white dark:hover:text-gray-300 cursor-pointer text-xl font-semibold"
        >nk</a
      >
    </div>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center space-x-8 flex-1 justify-center">
      <a
        href="/blog"
        class="group relative h-6 text-base text-neutral-950 dark:text-white"
      >
        <span class="relative inline-flex overflow-hidden">
          <div class="motion">Blog</div>
          <div class="motion-after">Blog</div>
        </span>
      </a>

      <a
        href="/projects"
        class="group relative h-6 text-base text-neutral-950 dark:text-white"
      >
        <span class="relative inline-flex overflow-hidden">
          <div class="motion">Projects</div>
          <div class="motion-after">Projects</div>
        </span>
      </a>

      <a
        href="/products"
        class="group relative h-6 text-base text-neutral-950 dark:text-white"
      >
        <span class="relative inline-flex overflow-hidden">
          <div class="motion">Products</div>
          <div class="motion-after">Products</div>
        </span>
      </a>

      <a
        href="/snippets"
        class="group relative h-6 text-base text-neutral-950 dark:text-white"
      >
        <span class="relative inline-flex overflow-hidden">
          <div class="motion">Snippets</div>
          <div class="motion-after">Snippets</div>
        </span>
      </a>

      <a
        href="/services"
        class="group relative h-6 text-base text-neutral-950 dark:text-white"
      >
        <span class="relative inline-flex overflow-hidden">
          <div class="motion">Services</div>
          <div class="motion-after">Services</div>
        </span>
      </a>
    </nav>

    <!-- Social Icons -->
    <div class="flex items-center justify-end space-x-1 flex-1">
      <!-- Photos -->
      <a
        href="/photos"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-icon transition-all duration-150 active:scale-90"
        aria-label="Photos"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="nav-svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z"
          ></path>
        </svg>
      </a>

      <!-- Newsletter -->
      <a
        href="/newsletter"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-icon transition-all duration-150 active:scale-90"
        aria-label="Newsletter"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="nav-svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
          ></path>
        </svg>
      </a>

      <!-- GitHub -->
      <a
        href="https://github.com/bodhniraj"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-icon transition-all duration-150 active:scale-90"
        aria-label="GitHub"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="nav-svg"
        >
          <path
            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
          >
          </path>
          <path d="M9 18c-4.51 2-5-2-7-2"></path>
        </svg>
      </a>

      <!-- Store -->
      <a
        href="/store"
        target="_blank"
        rel="noopener noreferrer"
        class="nav-icon transition-all duration-150 active:scale-90"
        aria-label="Store"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="nav-svg"
        >
          <path
            d="M13.5 21v-7.5a.75.75 0 0 1 .75-.75h3a.75.75 0 0 1 .75.75V21m-4.5 0H2.36m11.14 0H18m0 0h3.64m-1.39 0V9.349M3.75 21V9.349m0 0a3.001 3.001 0 0 0 3.75-.615A2.993 2.993 0 0 0 9.75 9.75c.896 0 1.7-.393 2.25-1.016a2.993 2.993 0 0 0 2.25 1.016c.896 0 1.7-.393 2.25-1.015a3.001 3.001 0 0 0 3.75.614m-16.5 0a3.004 3.004 0 0 1-.621-4.72l1.189-1.19A1.5 1.5 0 0 1 5.378 3h13.243a1.5 1.5 0 0 1 1.06.44l1.19 1.189a3 3 0 0 1-.621 4.72M6.75 18h3.75a.75.75 0 0 0 .75-.75V13.5a.75.75 0 0 0-.75-.75H6.75a.75.75 0 0 0-.75.75v3.75c0 .414.336.75.75.75Z"
          ></path>
        </svg>
      </a>

      <!-- Dark Mode Toggle -->
      <button
        id="theme-toggle"
        class="rounded-full p-2 transition-all duration-150 hover:bg-neutral-100 dark:hover:bg-neutral-800 cursor-pointer flex items-center justify-center active:scale-90"
        aria-label="Toggle Dark Mode"
      >
        <!-- Sun Icon (Light Mode) -->

        <svg
          id="icon-sun"
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-neutral-800 dark:hidden"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
          class="nav-svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z"
          ></path>
        </svg>

        <!-- Moon Icon (Dark Mode) -->
        <svg
          id="icon-moon"
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-white hidden dark:block"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
          class="nav-svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M21.75 15.25A9 9 0 1111.25 3.75a7.5 7.5 0 0010.5 11.5z"></path>
        </svg>
      </button>
    </div>
  </div>
</header>
