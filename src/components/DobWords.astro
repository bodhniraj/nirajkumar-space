<!-- Content -->
<main class="w-full max-w-2xl mx-auto px-4 py-12">
  <!-- Hero Section -->
  <section class="mb-8">
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">
      Date of Birth in Words
    </h1>
    <p class="text-[#555555] dark:text-[#bbbbbb] text-base mb-8">
      Enter your date of birth to convert it into words.
    </p>

    <!-- App -->
    <div class="space-y-4 mb-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Day Dropdown -->
