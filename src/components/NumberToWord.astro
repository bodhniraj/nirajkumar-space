<!-- Content -->
<main class="w-full max-w-2xl mx-auto px-4 py-12">
  <!-- Hero Section -->
  <section class="mb-8">
    <h1 class="text-4xl font-bold mb-8 text-gray-900 dark:text-white">
      Number to Word Converter
    </h1>
    <p class="text-[#555555] dark:text-[#bbbbbb] text-base mb-8">
      Convert any amount or number into words (Hindi & English).
    </p>

    <!-- App -->
    <div class="text-[#888888]">
      <input
        id="numberInput"
        type="number"
        placeholder="0"
        class="input input-lg w-full mb-8 rounded-lg bg-[#88888822] text-[#888888] dark:bg-[#FFFFFF0D] dark:text-white hover:dark:bg-[#88888825] hover:dark:text-white"
        oninput="convertNumber()"
      />
    </div>

    <!-- Results -->
    <div class="space-y-6">
      <!-- English Result -->
      <div
        class="bg-[#88888822] text-[#888888] dark:bg-[#FFFFFF0D] dark:text-white hover:dark:bg-[#88888825] hover:dark:text-white rounded-lg p-6"
      >
        <div class="flex items-center justify-between mb-6">
          <p class="text-lg font-medium">English</p>
          <button
            onclick="copyToClipboard('englishOutput')"
            class="p-2 text-gray-400 transition-all duration-150 cursor-pointer active:scale-90"
            title="Copy"
          >
            <svg
              width="20"
              height="20"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
              ></path>
            </svg>
          </button>
        </div>
        <p
          id="englishOutput"
          class="text-[#888888] dark:text-white text-lg leading-relaxed min-h-[1.75rem]"
        >
        </p>
      </div>

      <!-- Hindi Result -->
